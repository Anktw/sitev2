{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",             
    "lib": ["ES6", "DOM"],      
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node",     
    "esModuleInterop": true,         
    "strict": true   
  },
  "include": [
    "src/**/*",                    
    "next-env.d.ts",              
    "**/*.ts",                    
    "**/*.tsx",                   
    ".next/types/**/*.ts"         
  ],
  "exclude": [
    "node_modules",               
    ".next"                       
  ]
}
